#include<iostream>
using namespace std;
int main(){
char opera;
float num1,num2;
cout<<"Enter operator : +,-,*,/ : ";
cin>>opera;
cout<<"Enter two operands : ";
cin>>num1>>num2;
switch(opera){
        case '+':
            cout<<num1<<" + "<<num2<<" = "<<num1+num2;
            break;
        case '-':
            cout<<num1<<" - "<<num2<<" = "<<num1+num2;
            break;
        case '*':
            cout<<num1<<" * "<<num2<<" = "<<num1+num2;
            break;
        case '/':
            cout<<num1<<" / "<<num2<<" = "<<num1+num2;
            break;
        default:
            cout<<"Error! This operator is not correct";
            break;
}
returnÂ 0;
}
